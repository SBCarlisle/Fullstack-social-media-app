<%- include('includes/header') %>

<div class="container py-md-5 container--narrow">

  <%- include('includes/flash')%>
  
    <%- include('includes/profileShared') %>
  
    <div class="list-group">
      <% if (!followers.length) %> No followers
      <% followers.forEach(function(follower){ %>
        <a href="/profile/<%= follower.username %>" class="list-group-item list-group-item-action">
        <img class="avatar-tiny" src="<%= user.avatar ? user.avatar : '/assets/default_profile_sm.jpg'%>">
        <%= follower.username %>
      </a>
  <%  })  %>
    </div>
  </div>

  <%- include('includes/footer') %>